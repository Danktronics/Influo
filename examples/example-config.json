{
    "update_interval": 30,
    "log_level": "info",
    "default_deploy_path": "./projects",
    "default_log_path": "./logs",
    "api": {
        "http": {
            "port": 4200
        }
    },
    "projects": [
        {
            "url": "git url",
            "pipelines": [
                {
                    "name": "Production",
                    "stages": [
                        "install_dependencies",
                        "lint",
                        "deploy_production"
                    ],
                    "branches": [
                        "master"
                    ],
                    "log": {
                        "template": "[{time}] [{pipeline_name}] [{pipeline_stage}] [{path}] Command ({command}): {message}",
                        "console": true,
                        "save_to_file": true
                    },
                    "condition": "automatic",
                    "procedures": {
                        "install_dependencies": [
                            {
                                "commands": [
                                    "install command"
                                ],
                                "condition": "automatic"
                            }
                        ],
                        "lint": [
                            {
                                "name": "lint",
                                "commands": [
                                    "lint command"
                                ],
                                "condition": "automatic"
                            }
                        ],
                        "deploy_production": [
                            {
                                "name": "deploy",
                                "commands": [
                                    "run command"
                                ],
                                "condition": "automatic",
                                "auto_restart": {"not": [0]}
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
